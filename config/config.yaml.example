# Source groups/channels list (to monitor)
# Supported formats:
# - Group ID (negative number): -100123456789
# - Channel username: @channel_name
# - Private chat username: @username
source_chats:
  - -100123456789  # Example group ID
  # - "@example_channel"  # Example channel

# Target group/channel (where to forward messages)
# Can be group ID, channel username, or private chat username
target_chat: -100987654321

# UI language configuration
# en_US: English (default)
# zh_CN: Chinese
language: en_US

# Message filtering rules
filters:
  # Regex pattern list (any match passes)
  # Leave empty to disable regex filtering
  regex_patterns:
    - "\\[Important\\].*"
    - "Alert.*"

  # Keyword list (any match passes)
  # Leave empty to disable keyword filtering
  keywords:
    - "keyword1"
    - "keyword2"

  # Filter mode: whitelist or blacklist
  # whitelist: Only forward messages matching the rules
  # blacklist: Forward all messages except those matching the rules
  mode: whitelist

# Forwarding options
forwarding:
  # Whether to preserve original format (forward instead of copy)
  preserve_format: true

  # Whether to add source information
  add_source_info: true

  # Forwarding delay (seconds) to avoid rate limits
  delay: 0.5

# Ignore list (higher priority than filter rules)
ignore:
  # List of user IDs to ignore
  # Format: numeric ID, can be obtained via @userinfobot
  user_ids:
    # - 123456789
    # - 987654321

  # List of keywords to ignore
  # Messages containing any keyword will be ignored
  keywords:
    # - "advertisement"
    # - "promotion"
